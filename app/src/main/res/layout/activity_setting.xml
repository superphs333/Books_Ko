<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".Activity_Setting">

    <TextView
        android:id="@+id/txt_title"
        style="@style/TITLE_STYLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="앱설정"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_alarm_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="알람설정"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="활동"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Go_To_Management_Comment"
        android:text="댓글관리"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Go_To_Management_Follow"
        android:text="팔로우 관리" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_change_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="change_pw"
        android:text="비밀번호 변경" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="logout"
        android:text="로그아웃" />

    <Button
        android:id="@+id/btn_withdrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="withdrawal"
        android:text="회원탈퇴" />
</LinearLayout>