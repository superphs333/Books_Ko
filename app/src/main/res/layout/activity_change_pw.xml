<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_Change_Pw">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TITLE_STYLE"
        android:layout_marginBottom="50sp"
        android:text="비밀번호 변경" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/PW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호(대소문자 구분 숫자 특수문자  조합 9 ~ 12 자리)"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="변경 할 비밀번호를 입력해 주세요"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_pw_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="대소문자 구분 숫자 특수문자  조합 9 ~ 12 자리를 입력해주세요"
            android:layout_marginBottom="30sp"
            />

        <EditText
            android:id="@+id/edit_pw_chk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="한번 더 입력해주세요"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_chk_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호와 비밀번호 확인은 동일해야 합니다" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_chk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Pw_Change"
        android:text="변경" />

</LinearLayout>


